# ========================================
# Backend Environment Configuration
# ========================================
# This file contains environment variables for local development.
# Copy this file to .env and update the values.

# ========================================
# Database Configuration
# ========================================
# SQLite database file path (relative to backend directory)
# For Docker: use "file:/app/data/prod.db"
# For local: use "file:./dev.db"
DATABASE_URL="file:./dev.db"

# ========================================
# JWT Configuration (REQUIRED)
# ========================================
# ⚠️  IMPORTANT: Change this in production!
# Secret key for signing JWT tokens (minimum 32 characters, recommend 256 bits)
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET="your-secret-key-change-this-in-production-min-256-bits"

# JWT token expiration times
# Access token: short-lived (1 hour default)
# Refresh token: long-lived (7 days default)
JWT_ACCESS_TOKEN_EXPIRATION="1h"
JWT_REFRESH_TOKEN_EXPIRATION="7d"

# ========================================
# XXL-Job Admin API Configuration (REQUIRED)
# ========================================
# URL of your XXL-Job Admin instance
XXL_JOB_ADMIN_URL="http://localhost:8080/xxl-job-admin"

# XXL-Job Admin credentials
# These are used to authenticate with the XXL-Job Admin API
XXL_JOB_ADMIN_USERNAME="admin"
XXL_JOB_ADMIN_PASSWORD="123456"

# ========================================
# Server Configuration
# ========================================
# Port for the NestJS application
PORT=3000

# Node environment (development, production, test)
NODE_ENV="development"

# ========================================
# CORS Configuration
# ========================================
# Allowed origins for CORS (comma-separated if multiple)
# For local development with frontend on different port
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# For production, set to your frontend domain:
# CORS_ORIGIN="https://your-domain.com"
